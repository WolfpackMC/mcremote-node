{
    "ts-node": {
        "swc": true
    },
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es2017", "dom"],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}